<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:windowBackground">@color/app_bg</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/blue</item>
        <item name="android:actionMenuTextColor">@color/blue</item>
        <item name="android:layout_marginLeft">1dp</item>
    </style>

    <style name="SplashTheme" parent="@style/AppTheme">
        <item name="android:windowBackground">@mipmap/splash_bg_ch</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <!-- Frame -->
        <item name="android:windowFrame">@null</item>
        <!-- Window is floating activity top -->
        <item name="android:windowIsFloating">true</item>
        <!-- window is translucent -->
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- window background  transparent-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- dim enabled -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>

        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="AnimTools" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/popup_add_push_in</item>
        <item name="android:windowExitAnimation">@anim/popup_add_push_out</item>
    </style>

    <style name="IMTheme.Transparent" parent="@style/AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="share_dialog_anim" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_share_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_share_exit</item>
    </style>

    <style name="SelectPhotoDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/share_dialog_anim</item>
    </style>

    <style name="BottomConfirmDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@mipmap/share_trans</item>
        <item name="android:windowBackground">@mipmap/share_trans</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/share_dialog_anim</item>
        <item name="android:paddingLeft">20px</item>
        <item name="android:paddingRight">20px</item>
        <item name="android:paddingBottom">20px</item>
    </style>

    <style name="NoTitleFullScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>

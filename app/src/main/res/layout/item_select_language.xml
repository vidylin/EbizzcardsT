<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_language_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/onclick_color_selector"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_language_txt"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginLeft="20px"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="123123"
        android:textColor="@color/black"
        android:textSize="30px" />

    <ImageView
        android:id="@+id/item_language_iv"
        android:layout_width="89px"
        android:layout_height="88px"
        android:layout_alignParentRight="true"
        android:background="@mipmap/language_select_normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height_01"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20px"
        android:background="@color/line" />

</RelativeLayout>
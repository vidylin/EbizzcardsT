<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/dialog_bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/onclick_top_double_corners_selector">

            <TextView
                android:id="@+id/bot_dialog_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30px"
                android:textColor="@color/black_body_simple"
                android:textSize="@dimen/px28dp"
                android:gravity="center"
                android:text="12312313123"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height_01"
                android:layout_below="@id/bot_dialog_content"
                android:layout_marginTop="30px"
                android:background="@color/dialog_line" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bot_dialog_confirm_rl"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@drawable/onclick_bot_double_corners_selector">

            <TextView
                android:id="@+id/bot_dialog_confirm_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px36dp"
                android:textColor="@color/blue"
                android:layout_centerInParent="true"
                android:text="1231231231"/>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bot_dialog_caccel_rl"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@drawable/dialog_bg"
        android:layout_marginTop="20px">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/onclick_four_corners_selector"
            android:text="@string/cancel"
            android:textColor="@color/blue"
            android:textSize="@dimen/px36dp"
            android:gravity="center"/>

    </RelativeLayout>

</LinearLayout>
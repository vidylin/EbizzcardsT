<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ligo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.gzligo.ebizzcardstranslator.common.ToolActionBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ligo:show_back_icon="true"
        ligo:txt_center_title="@string/upload_idcard_actionbar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginTop="30px"
        android:text="@string/upload_idcard_tip"
        android:textColor="@color/black"
        android:textSize="@dimen/px28dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="264px"
        android:layout_marginTop="20px">

        <RelativeLayout
            android:id="@+id/idcard_positive_rl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:layout_weight="1"
            android:background="@drawable/onclick_color_selector">

            <ImageView
                android:id="@+id/idcard_positive_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="66px"
                android:src="@mipmap/idcard_positive" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/idcard_positive_iv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="44px"
                android:text="@string/upload_idcard_positive"
                android:textColor="@color/black_body_simple" />

            <ImageView
                android:id="@+id/my_idcard_positive_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/idcard_negative_rl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_weight="1"
            android:background="@drawable/onclick_color_selector">

            <ImageView
                android:id="@+id/idcard_negative_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="66px"
                android:src="@mipmap/idcard_negative" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/idcard_negative_iv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="44px"
                android:text="@string/upload_idcard_negative"
                android:textColor="@color/black_body_simple" />

            <ImageView
                android:id="@+id/my_idcard_negative_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/idcard_half_body_rl"
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:layout_margin="20px"
        android:background="@drawable/onclick_color_selector">

        <ImageView
            android:id="@+id/half_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="96px"
            android:src="@mipmap/idcard_half_body" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/half_body"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40px"
            android:text="@string/upload_idcard_halfbody"
            android:textColor="@color/black_body_simple" />

        <ImageView
            android:id="@+id/my_idcard_half_body_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/upload_idcard_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="40px"
            android:background="@mipmap/green_btn_normal"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/idcard_tip_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/upload_idcard_btn"
            android:layout_centerHorizontal="true"
            android:text="@string/upload_idcard_tip2"
            android:textColor="@color/black_body_simple" />

    </RelativeLayout>

</LinearLayout>
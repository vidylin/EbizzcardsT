<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/my_application_item_time_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:textColor="@color/black_body_simple"
        android:textSize="@dimen/px28dp"
        android:text="2016.11.26"
        android:gravity="center_horizontal"/>

    <RelativeLayout
        android:id="@+id/my_application_personal_msg_rl"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@drawable/onclick_color_selector">

        <TextView
            android:id="@+id/my_application_item_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/my_apply_personal_msg"
            android:textColor="@color/black"
            android:textSize="@dimen/px30dp"
            android:layout_marginLeft="20px"/>

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_selector" />

        <TextView
            android:id="@+id/my_application_state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/arrow"
            android:text="@string/my_apply_not_passed"
            android:textColor="@color/text_color_hint"
            android:textSize="@dimen/px30dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height_01"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20px"
            android:background="@color/line" />

    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ligo="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.gzligo.ebizzcardstranslator.common.ToolActionBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ligo:show_back_icon="true"
        ligo:txt_center_title="@string/my_wallet_add_bank_card"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@color/white"
        android:layout_marginTop="20px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:text="@string/add_bank_name"
            android:textSize="@dimen/px30dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/add_bank_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="222px"
            android:textSize="30px"
            android:textColor="@color/black"
            android:hint="@string/add_bank_name_hint"
            android:textColorHint="@color/text_report_reason_hint"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height_01"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20px"
            android:background="@color/line" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:text="@string/add_bank_card_num"
            android:textSize="@dimen/px30dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/add_bank_card_num_edt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="222px"
            android:textSize="30px"
            android:layout_marginRight="30px"
            android:lines="1"
            android:ellipsize="end"
            android:inputType="number"
            android:textColor="@color/black"
            android:background="@null"
            android:hint="@string/add_bank_card_num_hint"
            android:textColorHint="@color/text_report_reason_hint"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height_01"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20px"
            android:background="@color/line" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/add_bank_card_country_rl"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@drawable/onclick_color_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:text="@string/add_bank_country"
            android:textSize="@dimen/px30dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/add_bank_country_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="222px"
            android:textSize="30px"
            android:textColor="@color/black"
            android:text="@string/add_bank_country_default"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height_01"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20px"
            android:background="@color/line" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_selector" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/add_bank_card_bank_rl"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@drawable/onclick_color_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:text="@string/add_bank_bank"
            android:textColor="@color/black"
            android:textSize="@dimen/px30dp"/>

        <TextView
            android:id="@+id/add_bank_bank_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="222px"
            android:hint="@string/add_bank_bank_hint"
            android:textColor="@color/black"
            android:textColorHint="@color/text_report_reason_hint"
            android:textSize="30px"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height_01"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20px"
            android:background="@color/line"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_selector"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/add_bank_open_account_rl"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@drawable/onclick_color_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:text="@string/add_bank_open_account"
            android:textColor="@color/black"
            android:textSize="@dimen/px30dp"/>

        <TextView
            android:id="@+id/add_bank_open_account_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="222px"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginRight="30px"
            android:hint="@string/add_bank_open_account_hint"
            android:textColor="@color/black"
            android:textColorHint="@color/text_report_reason_hint"
            android:textSize="30px"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_selector"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="30px">

        <ImageView
            android:id="@+id/add_bank_agreed_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/add_bank_agree"/>

        <TextView
            android:id="@+id/add_bank_agreed_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12px"
            android:layout_toRightOf="@id/add_bank_agreed_iv"
            android:text="@string/add_bank_agreed"
            android:textColor="@color/black_body_simple"
            android:textSize="@dimen/px24dp"/>

        <TextView
            android:id="@+id/add_bank_protocol_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/add_bank_agreed_txt"
            android:text="@string/add_bank_protocol"
            android:textColor="@color/blue"
            android:textSize="@dimen/px24dp"/>

    </RelativeLayout>

    <Button
        android:id="@+id/add_bank_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="20px"
        android:layout_marginTop="40px"
        android:layout_marginRight="20px"
        android:background="@mipmap/green_btn_normal"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18"/>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ligo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.gzligo.ebizzcardstranslator.common.ToolActionBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ligo:show_back_icon="true"
        ligo:txt_center_title="@string/order_num_actionbar" />

    <com.gzligo.ebizzcardstranslator.common.refreshlayout.RefreshLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnablePureScrollMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/order_num_1_rl"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_marginTop="20px"
                android:background="@drawable/onclick_color_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:text="@string/order_num_1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/px30dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height_01"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20px"
                    android:background="@color/line" />

                <ImageView
                    android:id="@+id/order_num_1_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/education_select_blue_check"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/order_num_2_rl"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:background="@drawable/onclick_color_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:text="@string/order_num_2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/px30dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height_01"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20px"
                    android:background="@color/line" />

                <ImageView
                    android:id="@+id/order_num_2_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/education_select_blue_check"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/order_num_3_rl"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:background="@drawable/onclick_color_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:text="@string/order_num_3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/px30dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height_01"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20px"
                    android:background="@color/line" />

                <ImageView
                    android:id="@+id/order_num_3_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/education_select_blue_check"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/order_num_4_rl"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:background="@drawable/onclick_color_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:text="@string/order_num_4"
                    android:textColor="@color/black"
                    android:textSize="@dimen/px30dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height_01"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20px"
                    android:background="@color/line" />

                <ImageView
                    android:id="@+id/order_num_4_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/education_select_blue_check"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/order_num_5_rl"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:background="@drawable/onclick_color_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:text="@string/order_num_5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/px30dp" />

                <ImageView
                    android:id="@+id/order_num_5_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/education_select_blue_check"
                    android:visibility="gone" />

            </RelativeLayout>

        </LinearLayout>

    </com.gzligo.ebizzcardstranslator.common.refreshlayout.RefreshLayout>

</LinearLayout>
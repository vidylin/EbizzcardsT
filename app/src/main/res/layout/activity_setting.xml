<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ligo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.gzligo.ebizzcardstranslator.common.ToolActionBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ligo:show_back_icon="true"
        ligo:txt_center_title="@string/setting_actionbar" />

    <com.gzligo.ebizzcardstranslator.common.refreshlayout.RefreshLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnablePureScrollMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/setting_notification_rl"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_marginTop="20px"
                android:background="@drawable/onclick_color_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/setting_notification"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/px30dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/arrow_selector" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height_01"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20px"
                    android:background="@color/line" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/setting_languages_rl"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:background="@drawable/onclick_color_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/setting_languages"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/px30dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/arrow_selector" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height_01"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20px"
                    android:background="@color/line" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/setting_clear_cache_rl"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:background="@drawable/onclick_color_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/setting_clear_cache"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/px30dp" />

                <TextView
                    android:id="@+id/setting_clear_cache_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20px"
                    android:gravity="center_vertical"
                    android:textColor="@color/black_body_simple"
                    android:textSize="@dimen/px28dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height_01"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20px"
                    android:background="@color/line" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/setting_version_rl"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:background="@drawable/onclick_color_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/setting_version"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/px30dp" />

                <TextView
                    android:id="@+id/setting_version_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20px"
                    android:gravity="center_vertical"
                    android:text="@string/setting_version"
                    android:textColor="@color/black_body_simple"
                    android:textSize="@dimen/px28dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/setting_logout_rl"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_marginTop="30px"
                android:background="@drawable/onclick_color_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/setting_logout"
                    android:textColor="@color/black"
                    android:textSize="@dimen/px30dp" />

            </RelativeLayout>

        </LinearLayout>

    </com.gzligo.ebizzcardstranslator.common.refreshlayout.RefreshLayout>

</LinearLayout>
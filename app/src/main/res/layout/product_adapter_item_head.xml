<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/product_video_cover"
            android:layout_width="match_parent"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>

        <ProgressBar
            android:id="@+id/product_video_down_progress"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/product_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/play_video"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/detail_name_txt"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_16"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/height_50"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/chat_time">
        <TextView
            android:id="@+id/product_detail_price_txt"
            android:layout_width="match_parent"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/red"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_10"
            android:maxLines="1"
            android:text="8888.00"
            android:layout_height="@dimen/height_50"/>
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/dialog_bg"
              android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_send_msg_title_txt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_16"/>

    <EditText
        android:id="@+id/edt_edit_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:background="@drawable/bg_edittext_selector"
        android:gravity="center"
        android:hint="@string/hint_input_name"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height_01"
        android:background="@color/dialog_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_edit_name_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/onclick_bl_corners_selector"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16"/>

        <View
            android:layout_width="@dimen/line_height_01"
            android:layout_height="match_parent"
            android:background="@color/dialog_line"/>

        <TextView
            android:id="@+id/tv_edit_name_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/onclick_br_corners_selector"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/green"
            android:textSize="@dimen/text_size_16"/>
    </LinearLayout>

</LinearLayout>
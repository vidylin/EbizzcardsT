<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="114px"
        android:background="@color/white">

        <ImageView
            android:id="@+id/input_pwd_dialog_close_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:background="@drawable/close_x_sheape_selector"/>

        <TextView
            android:id="@+id/input_pwd_dialog_actionbar_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/px36dp"
            android:textColor="@color/black"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height_01"
            android:layout_alignParentBottom="true"
            android:background="@color/line" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/input_pwd_dialog_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40px"
            android:textColor="@color/black"
            android:textSize="@dimen/px30dp"/>

        <TextView
            android:id="@+id/input_pwd_dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/px80dp"
            android:textColor="@color/black"
            android:layout_below="@id/input_pwd_dialog_title_tv"
            android:layout_marginTop="40px"
            android:layout_centerHorizontal="true"/>

        <com.gzligo.ebizzcardstranslator.utils.PayPwdEditView
            android:id="@+id/input_pwd_dialog_pwd_ppedv"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:layout_marginTop="40px"
            android:layout_marginBottom="40px"
            android:background="@color/white"
            android:layout_below="@id/input_pwd_dialog_content"
            android:cursorVisible="false"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="numberPassword"
            android:maxLength="6"
            app:VerifyBorderColor="@color/line"
            app:VerifyBorderWidth="1px"
            app:VerifyCodeLength="6"
            app:VerifyCodeTextColor="@color/black"
            app:VerifyCodeTextSize="24sp"/>

    </RelativeLayout>

</LinearLayout>
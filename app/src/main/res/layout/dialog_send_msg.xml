<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/search_bg"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/margin_10"
        android:padding="@dimen/margin_4"
        android:text="123"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_16"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height_01"
        android:background="@color/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/onclick_bl_corners_selector"
            android:gravity="center"
            android:text="22"
            android:textColor="@color/green"
            android:textSize="@dimen/text_size_16"/>

        <View
            android:id="@+id/line"
            android:layout_width="@dimen/line_height_01"
            android:layout_height="match_parent"
            android:background="@color/line"/>

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/onclick_br_corners_selector"
            android:gravity="center"
            android:text="22"
            android:textColor="@color/green"
            android:textSize="@dimen/text_size_16"/>
    </LinearLayout>
</LinearLayout>
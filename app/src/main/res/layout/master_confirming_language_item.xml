<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/language_item_rl"
        android:layout_width="match_parent"
        android:layout_height="66px">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/master_language_unconfirmed"
            android:layout_marginTop="20px"
            android:layout_marginLeft="20px"
            android:textSize="@dimen/px28dp"
            android:textColor="@color/black_body_simple"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/parting_line"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@color/white">

        <TextView
            android:id="@+id/language_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:singleLine="true"
            android:text="123"
            android:maxEms="15"
            android:ellipsize="end"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_16"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:layout_centerVertical="true"
            android:text="@string/me_confirming"
            android:textSize="@dimen/text_size_16"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/parting_line"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</LinearLayout>
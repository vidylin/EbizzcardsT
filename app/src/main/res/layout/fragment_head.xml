<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="88px"
              android:background="@color/white">

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.gzligo.ebizzcardstranslator.common.DrawableCenterRadioButton
            android:id="@+id/radio_button_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:paddingBottom="20px"
            android:paddingTop="20px"
            android:gravity="center"
            android:textSize="32px"
            />

        <com.gzligo.ebizzcardstranslator.common.DrawableCenterRadioButton
            android:id="@+id/radio_button_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:paddingBottom="20px"
            android:paddingTop="20px"
            android:textSize="32px"
            />
    </RadioGroup>

    <TextView
        android:layout_width="2px"
        android:layout_height="40px"
        android:layout_centerInParent="true"
        android:background="@color/line"/>

    <com.gzligo.ebizzcardstranslator.common.TabIndicator
        android:id="@+id/iv_tab_bottom_img"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/blue"
        android:layout_alignParentBottom="true"
        android:scaleType="matrix"/>
</RelativeLayout>
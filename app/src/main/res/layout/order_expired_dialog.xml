<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600px"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/order_expired_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px"
            android:layout_marginTop="68px"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/from_people_img"
                android:layout_toLeftOf="@+id/center_img"
                android:layout_width="78px"
                android:layout_height="78px"
                android:layout_marginRight="68px"
                android:src="@mipmap/default_head_portrait"/>

            <ImageView
                android:id="@+id/center_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/grab_order_arrow_selected"/>

            <ImageView
                android:id="@+id/to_people_img"
                android:layout_width="78px"
                android:layout_height="78px"
                android:layout_toRightOf="@+id/center_img"
                android:layout_marginLeft="68px"
                android:src="@mipmap/default_head_portrait"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36px"
            android:layout_marginRight="36px">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/from_people_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dsaf"
                    android:textColor="@color/black_body_simple"
                    android:textSize="24px"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/from_language_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:text="dsaf"
                    android:textColor="@color/black_body_simple"
                    android:textSize="32px"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/to_people_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="dsaf"
                    android:textColor="@color/black_body_simple"
                    android:textSize="24px"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/to_language_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:text="dsaf"
                    android:textColor="@color/black_body_simple"
                    android:textSize="32px"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="56px"
            android:src="@mipmap/grab_order_failed_bg"/>

        <TextView
            android:id="@+id/order_state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30px"
            android:text="@string/order_expire"
            android:textColor="@color/black"
            android:textSize="36px"/>

        <RelativeLayout
            android:id="@+id/remarks_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="40px"
            android:visibility="gone"
            android:background="@drawable/remarks">

            <TextView
                android:id="@+id/remarks_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:layout_marginTop="30px"
                android:textColor="@color/black_body_simple"
                android:textSize="28px"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:layout_marginTop="40px"
            android:gravity="center">

            <TextView
                android:id="@+id/confirm_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirm"
                android:textColor="@color/green"
                android:textSize="36px"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ligo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.gzligo.ebizzcardstranslator.common.ToolActionBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ligo:show_back_icon="true"
        ligo:txt_center_title="@string/setting_languages" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20px"
        android:text="@string/setting_languages_tip"
        android:textColor="@color/black_body_simple"
        android:textSize="@dimen/px28dp" />

    <RelativeLayout
        android:id="@+id/setting_language_zh_rl"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@drawable/onclick_color_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:gravity="center_vertical"
            android:text="@string/setting_languages_zh"
            android:textColor="@color/black"
            android:textSize="@dimen/px30dp" />

        <ImageView
            android:id="@+id/setting_language_zh_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@mipmap/education_select_blue_check" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height_01"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20px"
            android:background="@color/line" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_language_en_rl"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@drawable/onclick_color_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:gravity="center_vertical"
            android:text="@string/setting_languages_en"
            android:textColor="@color/black"
            android:textSize="@dimen/px30dp" />

        <ImageView
            android:id="@+id/setting_language_en_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@mipmap/education_select_blue_check"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>